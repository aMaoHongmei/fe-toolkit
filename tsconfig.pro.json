{
  "compilerOptions": {
    "target": "ES5",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "strictNullChecks": true,
    "importHelpers": true,
    "paths": {
      "@/*": ["src/*"],
      "fe-toolkit": ["./packages/utils/src/index.ts"],
      "fe-toolkit/lib/*": ["./packages/utils/src/*"]
    }
  },
  // "include": ["node_modules", "lib", "es", "dist"],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "**/__tests__",
    "**/__test__",
    // "**/demo",
    // "example",
    "gulpfile.js"
  ]
}
